generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String
  properties Property[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Property {
  id          Int       @id @default(autoincrement())
  address     String
  city        String
  postcode    String
  propertyType String
  occupants   Int       @default(0)
  households  Int       @default(0)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  gasSafety   GasSafety?
  eicr        EICR?
  epc         EPC?
  fireSafety  FireSafety?
  alarms      AlarmCompliance?
  licence     Licence?
  checklist   HabitabilityChecklist?
  documents   Document[]
  reminders   Reminder[]
  transactions Transaction[]
  schedules   Schedule[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GasSafety {
  id         Int     @id @default(autoincrement())
  propertyId Int     @unique
  property   Property @relation(fields: [propertyId], references: [id])
  status     String
}

model EICR {
  id         Int     @id @default(autoincrement())
  propertyId Int     @unique
  property   Property @relation(fields: [propertyId], references: [id])
  status     String
}

model EPC {
  id         Int     @id @default(autoincrement())
  propertyId Int     @unique
  property   Property @relation(fields: [propertyId], references: [id])
  status     String
}

model FireSafety {
  id         Int     @id @default(autoincrement())
  propertyId Int     @unique
  property   Property @relation(fields: [propertyId], references: [id])
  status     String
}

model AlarmCompliance {
  id         Int     @id @default(autoincrement())
  propertyId Int     @unique
  property   Property @relation(fields: [propertyId], references: [id])
  smokeAlarms Int?   @default(0)
  coAlarms    Int?   @default(0)
  status      String
}

model Licence {
  id         Int     @id @default(autoincrement())
  propertyId Int     @unique
  property   Property @relation(fields: [propertyId], references: [id])
  status     String
}

model HabitabilityChecklist {
  id            Int     @id @default(autoincrement())
  propertyId    Int     @unique
  property      Property @relation(fields: [propertyId], references: [id])
  dampMould     Boolean @default(false)
  ventilation   Boolean @default(false)
  heating       Boolean @default(false)
  structureSafe Boolean @default(false)
  fireExitsClear Boolean @default(false)
  sanitation    Boolean @default(false)
  infestation   Boolean @default(false)
  status        String
}

model Document {
  id         Int      @id @default(autoincrement())
  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id])
  name       String
  url        String
  createdAt  DateTime @default(now())
}

model Reminder {
  id         Int      @id @default(autoincrement())
  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id])
  message    String
  dueDate    DateTime
  createdAt  DateTime @default(now())
}

model Transaction {
  id         Int      @id @default(autoincrement())
  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id])
  amount     Float
  type       String
  createdAt  DateTime @default(now())
}

model Schedule {
  id         Int      @id @default(autoincrement())
  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id])
  task       String
  date       DateTime
}
